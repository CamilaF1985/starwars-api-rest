{
  "name": "starwars-blog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm-run-all --parallel start-backend start-frontend",
    "start-backend": "npm run install-backend && npm run populate-db && npm run run-backend",
    "install-backend": "pipenv install && pipenv install requests && pipenv install flask-cors && pipenv install flask_restful && pipenv install werkzeug",
    "run-backend": "pipenv run python src/backend/app.py",
    "start-frontend": "npm run dev",
    "populate-db": "pipenv run python src/backend/poblar_bd_starwars.py",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest"
  },       
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "vite": "^5.0.0"
  }
}